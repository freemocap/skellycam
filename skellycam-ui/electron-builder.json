{
  "appId": "skellycam.app",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "skellycam_server.exe",
    "../shared/skellycam-logo/skellycam-favicon.ico"
  ],
  "icon": "../shared/skellycam-logo/skellycam-favicon.ico",
  "asar": true,
  "asarUnpack": [
    "**/skellycam_server.exe"
  ],
  "mac": {
    "artifactName": "${productName}_${version}_installer.${ext}",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}_installer.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "generic",
    "channel": "latest",
    "url": "https://github.com/freemocap/freemocap"
  }
}
