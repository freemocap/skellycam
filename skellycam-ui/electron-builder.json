{
  "appId": "skellycam.app",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "skellycam_server*",
    "../shared/skellycam-logo/skellycam-logo.png"
  ],
  "icon": "../shared/skellycam-logo/skellycam-logo.png",
  "asar": true,
  "asarUnpack": [
    "**/skellycam_server*"
  ],
  "mac": {
    "artifactName": "${productName}_${version}_installer.${ext}",
    "target": [
      "dmg",
      "zip"
    ],
    "entitlements": "entitlements.mac.plist",
    "extendInfo": {
      "NSCameraUsageDescription": "This app needs camera access to record videos for motion capture."
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}_installer.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "generic",
    "channel": "latest",
    "url": "https://github.com/freemocap/freemocap"
  }
}
